{
    "author": "Hartorn",
    "name": "dd5-character-builder",
    "description": "Character builder for D&D 5",
    "version": "0.0.1",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Hartorn/dd5-character-builder.git"
    },
    "engines": {
        "node": "6.9.x",
        "npm": "3.10.x"
    },
    "scripts": {
        "bundle": "better-npm-run bundle",
        "build": "npm run bundle",
        "start": "npm run start:npm",
        "start:npm": "better-npm-run webpack-dev-server-npm-focus",
        "watch": "better-npm-run watch"
    },
    "main": "app/index.js",
    "babel": {
        "presets": [
            "focus"
        ]
    },
    "betterScripts": {
        "bundle": {
            "command": "webpack",
            "env": {
                "ANCHOR_CLASS": "demo-app",
                "BABELIFIED_PATH": "./app",
                "ENTRY_FILE_PATH": "./app/index",
                "PAGE_TITLE": "D&D 5 - Character builder",
                "OUTPUT_DIR": "./docs",
                "OUTPUT_PUBLIC_PATH": "./",
                "GENERATE_HTML": "false",
                "DROP_CONSOLE": "true",
                "LOCAL_FOCUS": "false",
                "LEGACY_SEARCH_API": "false",
                "DEV": "false",
                "MINIMIFY": "true",
                "SOURCE_MAPS": "false",
                "node_env": "production",
                "BABEL_ENV": "production",
                "BASE_URL": "/character-builder-dd5/"
            }
        },
        "watch": {
            "command": "webpack --watch",
            "env": {
                "ANCHOR_CLASS": "demo-app",
                "BABELIFIED_PATH": "./app",
                "ENTRY_FILE_PATH": "./app/index",
                "PAGE_TITLE": "Focus demonstration application",
                "API_HOST": "localhost",
                "API_PORT": 8080,
                "OUTPUT_DIR": "./public",
                "LOCAL_FOCUS": "false",
                "LEGACY_SEARCH_API": "false",
                "BASE_URL": "/"
            }
        },
        "webpack-dev-server-npm-focus": {
            "command": "node ./dev-server.js",
            "env": {
                "ANCHOR_CLASS": "demo-app",
                "BABELIFIED_PATH": "./app",
                "ENTRY_FILE_PATH": "./app/index",
                "PAGE_TITLE": "Focus demonstration application",
                "API_HOST": "localhost",
                "API_PORT": 8080,
                "OUTPUT_DIR": "./public",
                "LOCAL_FOCUS": "false",
                "LEGACY_SEARCH_API": "false",
                "BASE_URL": "/"
            }
        }
    },
    "devDependencies": {
        "babel-preset-focus": "0.7.0",
        "better-npm-run": "0.0.15",
        "eslint-config-focus": "0.5.0",
        "focus-components": "2.1.7-1",
        "focus-core": "2.1.1",
        "focus-devtools": "0.4.0",
        "lodash": "4.17.4",
        "material-design-icons-iconfont": "3.0.3",
        "moment": "2.18.1",
        "native-promise-only": "0.8.1",
        "node-sass": "4.5.3",
        "numeral": "1.5.6",
        "react": "15.4.2",
        "react-addons-css-transition-group": "15.4.2",
        "react-dom": "15.4.2",
        "react-router": "3.0.0",
        "react-slick": "0.14.11",
        "slick-carousel": "1.6.0",
        "webpack-focus": "0.13.0"
    }
}